	<!-- 회원가입 -->
	<insert id="insertMember" parameterType="Member">
	INSERT INTO MEMBER
	 (M_ID, M_PWD, M_NAME, M_EMAIL, M_PHONE
	 , M_ADRS, M_GENDER, M_BDATE, M_ENROLLDATE, M_ISDELETE)
	  VALUES 
	 (#{M_ID}, #{M_PWD}, #{M_NAME}, #{M_EMAIL}, #{M_PHONE}
	 , #{M_ADRS}, #{M_GENDER}, #{M_BDATE}, DEFAULT, DEFAULT) 
	</insert>
	
	<!-- 로그인 -->
	<select id="login" resultType="Member">
	SELECT M_ID, M_PWD
	 FROM MEMBER
	WHERE M_ID = #{M_ID}
	 AND M_PWD = #{M_PWD} 
	</select>
	
	<select id="getUserById" parameterType="String" resultType="kh.spring.daesinsa.member.security.CustomUserDetails">
	SELECT * FROM MEMBER WHERE ID=#{M_id}
	</select>
	
